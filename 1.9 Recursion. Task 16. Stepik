#include <iostream>
#include <vector>
using namespace std;

vector <int> v();



int main (){
  int n;
  int init = 1, output = 1;
  cin >> n;
  
  //inite v[i]
  init = 1;
  if (inite == 1) {
    for (i = 0; i < n; i++){
      v[i] = 0;
    }
  }
  
  
  cout << n << endl;
  //output v[i]
  output = 1;
  if (output == 1) {
    for (i = 0; i < n; i++){
      cout << v[i] << " ";
    }
  }


return 0;
}
